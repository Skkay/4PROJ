                        <h2 class="mg-md">{{ 'home.entrepreneurship.title'|trans }}</h2>
                        <p class="lead mb-0">
                            {{ 'home.entrepreneurship.description'|trans }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="page-section clearfix">
        <div class="container">
            <h2 class="section-heading text-uppercase scroll-fx-left-in-fade lazyload">{{ 'home.presentation.title'|trans }}</h2>
            <div class="intro scroll-fx-right-in-fade lazyload">
                <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" src="{{asset('build/images/iStock-846567624-compressor.jpg ')}}" data-src="{{asset('build/images/iStock-846567624-compressor.jpg ')}}" alt="">
                <div class="intro-text left-0 text-center bg-faded p-5 rounded">
                    <h2 class="section-heading mb-4">
                        <span class="section-heading-lower">{{ 'home.presentation.welcome'|trans }}</span>
                    </h2>
                    <p class="mb-3">
                        "{{ 'home.presentation.quote'|trans }}"
                    </p>
                    <div class="intro-button mx-auto">
                        <div class="btn btn-primary btn-xl" style="cursor:default;border:none;background-color: #3472F7;color:white">{{ 'home.presentation.team'|trans }}</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section" id="contact" style="background-color:whitesmoke;">
        <div class="container">
            <div class="row justify-content-center mb-4">
                <div class="col-md-8 col-lg-8 text-center">
                    <h2 class="lg-title mb-2">{{ 'home.contact.contact_us'|trans }}</h2>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <form action="mail.php" method="post" id="main_contact_form" class="contact__form">
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-success contact__msg" style="display: none" role="alert">
                                    {{ 'home.contact.message_sent'|trans }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="text" name="name" id="name" class="form-control" placeholder="{{ 'home.contact.form_placeholder.name'|trans }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="text" name="email" id="email" class="form-control" placeholder="{{ 'home.contact.form_placeholder.email'|trans }} *" required="required">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input type="text" name="subject" id="subject" class="form-control" placeholder="{{ 'home.contact.form_placeholder.subject'|trans }} *" required="required">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <textarea name="message" id="message" cols="30" rows="6" class="form-control" placeholder="{{ 'home.contact.form_placeholder.message'|trans }} *" required="required" ></textarea>
                                </div>
                            </div>
                            <div class="g-recaptcha" data-sitekey="6Lcgt58UAAAAAKocJ3W8_rdG4JFBRTyE9TuN70bW"></div>
                            <div class="col-lg-12">
                                <div class="submit text-center">
                                    <input name="submit" type="submit" class="btn btn-primary btn-lg" style="border:none;background-color: #3472F7;color:white" value="{{ 'home.contact.form_placeholder.submit'|trans }}">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    
    <script src='https://www.google.com/recaptcha/api.js?hl=fr'></script>

    <div id="page-loading-blocs-notifaction" class="page-preloader"></div>
    <script type="text/javascript">
        window.onscroll = function() {
            if (document.body.scrollTop > 440 || document.documentElement.scrollTop > 440) {
                document.getElementsByClassName("rebond").className = "bounce";
            }
        };
    </script>
{% endblock %}
