{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.thesis.title.index'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'admin.thesis.title.index'|trans }}</h1>

<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th scope="col">{{ 'admin.thesis.table.id'|trans }}</th>
            <th scope="col">{{ 'admin.thesis.table.student'|trans }}</th>
            <th scope="col">{{ 'admin.thesis.table.subject'|trans }}</th>
            <th scope="col">{{ 'admin.thesis.table.delivered'|trans }} ?</th>
            <th scope="col">{{ 'admin.thesis.table.remark'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for thesis in theses %}
        <tr>
            <td><a href="{{ path('app.admin.thesis.show', {'id': thesis.id} ) }}">{{ thesis.id }}</a></td>
            <td>{{ thesis.student.user.firstName ?? '-' }} {{ thesis.student.user.lastName ?? '-' }}</td>
            <td>{{ thesis.subject ?? '-' }}</td>
            <td>{{ thesis.delivered ? 'admin.thesis.misc.yes'|trans : 'admin.thesis.misc.no'|trans }}</td>
            <td>{{ thesis.remark ?? '-' }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
