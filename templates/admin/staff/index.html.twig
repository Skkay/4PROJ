{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.staff.title.index'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'admin.staff.title.index'|trans }}</h1>

<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th scope="col">{{ 'admin.staff.table.id'|trans }}</th>
            <th scope="col">{{ 'admin.staff.table.firstname'|trans }}</th>
            <th scope="col">{{ 'admin.staff.table.lastname'|trans }}</th>
            <th scope="col">{{ 'admin.staff.table.email'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for staff in staffs %}
        <tr>
            <td><a href="{{ path('app.admin.staff.show', {'id': staff.id} ) }}">{{ staff.id }}</a></td>
            <td>{{ staff.user.firstName ?? '-' }}</td>
            <td>{{ staff.user.lastName ?? '-' }}</td>
            <td><a href="mailto:{{ staff.user.email }}">{{ staff.user.email }}</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
