{% extends 'base.html.twig' %}

{% block title %}Hello DiplomaController!{% endblock %}

{% block body %}
<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <div class="container">       
        <header class="animated bounceInDown">
            <h1><b>Diplomes des étudiants</b></h1><br />
        </header>                                                                
        <div class="table-responsive">          
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Détails</th>
                        <th scope="col">Diplome</th>
                    </tr>
                </thead>
                <tbody>
                {% for diploma in diplomas %}
                    <tr>
                        <td><a href="{{ path('app.admin.diploma.show', {'id': diploma.id} ) }}"><i class="pe-7s-plus" style="font-size:30px;margin-top:4px"></i></a></td>
                        <td>{{ diploma.label }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
