{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.role.title.index'|trans }}{% endblock %}

{% block body %}
<h1>Role</h1>

<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th scope="col">{{ 'admin.role.table.id'|trans }}</th>
            <th scope="col">{{ 'admin.role.table.from'|trans }}</th>
            <th scope="col">{{ 'admin.role.table.to'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for role in roles %}
        <tr>
            <td><a href="{{ path('app.admin.role.show', {'id': role.id} ) }}">{{ role.id }}</a></td>
            <td>{{ role.from ?? '-' }}</td>
            <td>{{ role.to ?? '-' }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
