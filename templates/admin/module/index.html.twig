{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.module.title.index'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'admin.module.title.index'|trans }}</h1>

<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th scope="col">{{ 'admin.module.table.id'|trans }}</th>
            <th scope="col">{{ 'admin.module.table.label'|trans }}</th>
            <th scope="col">{{ 'admin.module.table.speciality'|trans }} ?</th>
            <th scope="col">{{ 'admin.module.table.ects'|trans }}</th>
            <th scope="col">{{ 'admin.module.table.description'|trans }}</th>
            <th scope="col">{{ 'admin.module.table.level'|trans }}</th>
            <th scope="col">{{ 'admin.module.table.name'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for module in modules %}
        <tr>
            <td><a href="{{ path('app.admin.module.show', {'id': module.id} ) }}">{{ module.id }}</a></td>
            <td>{{ module.label ?? '-' }}</td>
            <td>{{ module.speciality ? 'admin.module.misc.yes'|trans : 'admin.module.misc.no'|trans }}</td>
            <td>{{ module.ects ?? '-' }}</td>
            <td>{{ module.description ?? '-' }}</td>
            <td>{{ module.level.label ?? '-' }}</td>
            <td>{{ module.name ?? '-' }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
