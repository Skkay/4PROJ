{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.module.title.show'|trans }}{% endblock %}

{% block body %}
<ul>
    <li><b>{{ 'admin.module.misc.id'|trans }}:</b> {{ module.id }}</li>
    <li><b>{{ 'admin.module.misc.label'|trans }}:</b> {{ module.label ?? '-' }}</li>
    <li><b>{{ 'admin.module.misc.instructors'|trans }}:</b>
        <ul>
        {% if module.instructors is empty %}
            <li>-</li>
        {% else %}
            {% for instructor in module.instructors %}
                <li>{{ instructor.user.email }}</li>
            {% endfor %}
        {% endif %}
        </ul>
    </li>
    <li><b>{{ 'admin.module.misc.speciality'|trans }}:</b> {{ module.speciality ? 'admin.module.misc.yes'|trans : 'admin.module.misc.no'|trans }}</li>
    <li><b>{{ 'admin.module.misc.students'|trans }}:</b>
        <ul>
        {% if module.students is empty %}
            <li>-</li>
        {% else %}
            {% for student in module.students %}
                <li>{{ student.user.email }}</li>
            {% endfor %}
        {% endif %}
        </ul>
    </li>
    <li><b>{{ 'admin.module.misc.grades'|trans }}:</b>
        <ul>
        {% if module.grades is empty %}
            <li>-</li>
        {% else %}
            {% for grade in module.grades %}
                <li>{{ grade.student.user.email }}: {{ grade.grade ?? '-' }}</li>
            {% endfor %}
        {% endif %}
        </ul>
    </li>
    <li><b>{{ 'admin.module.misc.ects'|trans }}:</b> {{ module.ects ?? '-' }}</li>
    <li><b>{{ 'admin.module.misc.description'|trans }}:</b> {{ module.description ?? '-' }}</li>
    <li><b>{{ 'admin.module.misc.level'|trans }}:</b> {{ module.level.label }}</li>
    <li><b>{{ 'admin.module.misc.name'|trans }}:</b> {{ module.name ?? '-' }}</li>
</ul>
{% endblock %}
