{% extends 'base.html.twig' %}

{% block title %}Hello CampusController!{% endblock %}

{% block body %}
    <div class="container">       
        <header class="animated bounceInDown">
            <h1><b>DÃ©tails du campus de {{ campus.label }}</b></h1><br />
        </header>                
        <div class="container">
            <p>{{ campus.city ?? '' is empty ? '' : ' Le campus de ' ~ campus.label  ~ ' se trouve dans la ville de se trouve dans la ville de ' ~ campus.city  }}</p>
            {% if campus.sections is not empty %}
                <p>Section(s) du campus :</p>
                {% for section in campus.sections %}
                    <ul>
                        <li>{{ section.label }}</li>
                    </ul>
                {% endfor %}
            {% endif %}
            
            {% if campus.staff is not empty %}
                <p>Campus staff : </p>
                {% for staff in campus.staff %}
                    <ul>
                        <li>{{ staff.user.email }}</li>
                    </ul>
                {% endfor %}
            {% endif %}

            
            {% if campus.students is not empty %}
                <p>Etudiant du campus de {{ campus.label }} : </p>
                {% for student in campus.students %}
                    <ul>
                        <li>{{ student.user.email }}</li>
                    </ul>
                {% endfor %}
            {% endif %}
            
        </div>
    </div>
{% endblock %}
