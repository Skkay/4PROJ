{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.etl.data_schema.title.data_schema'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'admin.etl.data_schema.title.data_schema'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'admin.etl.data_schema.table.id'|trans }}</th>
                <td>{{ data_schema.id }}</td>
            </tr>
            <tr>
                <th>{{ 'admin.etl.data_schema.table.label'|trans }}</th>
                <td>{{ data_schema.label }}</td>
            </tr>
            <tr>
                <th>{{ 'admin.etl.data_schema.table.schema'|trans }}</th>
                <td>{{ data_schema.equivalence ? data_schema.equivalence|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app.admin.etl.data_schema.index') }}">{{ 'form.misc.back_to_list'|trans }}</a>

    <a class="btn btn-primary" href="{{ path('app.admin.etl.data_schema.edit', {'id': data_schema.id}) }}">{{ 'form.misc.edit'|trans }}</a>
{% endblock %}
