{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.accounts_student_comment.title.index'|trans }}{% endblock %}

{% block body %}
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <div class="container">       
            <header class="animated bounceInDown">
                <h1><b>{{ 'admin.accounts_student_comment.title.index'|trans }}</b></h1><br />
            </header>                                                                
            <div class="table-responsive">          
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'admin.accounts_student_comment.table.details'|trans }}</th>
                            <th scope="col">{{ 'admin.accounts_student_comment.table.comment'|trans }}</th>
                            <th scope="col">{{ 'admin.accounts_student_comment.table.create_date'|trans }}</th>
                            <th scope="col">{{ 'admin.accounts_student_comment.table.update_date'|trans }}</th>
                            <th scope="col">{{ 'admin.accounts_student_comment.table.email'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for accountsStudentComment in accountsStudentComments %}
                        <tr>
                            <td><a href="{{ path('app.admin.accountsStudentComment.show', {'id': accountsStudentComment.id} ) }}"><i class="pe-7s-plus" style="font-size:30px;margin-top:4px"></i></a></td>
                            <td>{{ accountsStudentComment.comment }}</td>
                            <td>{{ accountsStudentComment.createdAt|date('d-m-Y') }}</td>
                            <td>{{ accountsStudentComment.updatedAt|date('d-m-Y') }}</td>
                            <td>{{ accountsStudentComment.student.user.email }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
