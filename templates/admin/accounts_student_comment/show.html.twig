{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.accounts_student_comment.title.show'|trans }}{% endblock %}

{% block body %}
<div class="container">       
    <header class="animated bounceInDown">
        <h1><b>{{ 'admin.accounts_student_comment.misc.comment'|trans }}</b></h1><br />
    </header>                
    <div class="container">
        <p>{{ 'admin.accounts_student_comment.misc.comment_of'|trans({ 'firstName': accountsStudentComment.student.user.firstName ?? '-', 'lastName': accountsStudentComment.student.user.lastName ?? '-', 'createDate': accountsStudentComment.createdAt|date('d-m-Y'), 'updateDate': accountsStudentComment.updatedAt|date('d-m-Y') }) }}</p>
        <p>{{ 'admin.accounts_student_comment.misc.comment'|trans }}: </p>
        <ul>
            <li>{{ accountsStudentComment.comment }}</li>
        </ul>
    </div>
</div>
{% endblock %}
