{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.company.title.index'|trans }}{% endblock %}

{% block body %}
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <div class="container">       
            <header class="animated bounceInDown">
                <h1><b>{{ 'admin.company.title.index'|trans }}</b></h1><br />
            </header>                                                                
            <div class="table-responsive">          
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'admin.company.table.name'|trans }}</th>
                            <th scope="col">{{ 'admin.company.table.address'|trans }}</th>
                            <th scope="col">{{ 'admin.company.table.sector'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for company in companies %}
                        <tr>
                            <td><a href="{{ path('app.admin.company.show', {'id': company.id} ) }}">{{ company.name }}</a></td>
                            <td>{{ company.address ?? '-' }}</td>
                            <td>{{ company.sector ?? '-' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
