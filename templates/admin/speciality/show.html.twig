{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.speciality.title.show'|trans }}{% endblock %}

{% block body %}
<ul>
    <li><b>{{ 'admin.speciality.misc.id'|trans }}:</b> {{ speciality.id }}</li>
    <li><b>{{ 'admin.speciality.misc.label'|trans }}:</b> {{ speciality.label }}</li>
    <li><b>{{ 'admin.speciality.misc.students'|trans }}:</b>
        <ul>
        {% if speciality.students is empty %}
            <li>-</li>
        {% else %}
            {% for student in speciality.students %}
                <li>{{ student.user.email }}</li>
            {% endfor %}
        {% endif %}
        </ul>
    </li>
</ul>
{% endblock %}
