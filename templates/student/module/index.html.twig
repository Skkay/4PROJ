{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <div class="container">       
        <header class="animated bounceInDown">
            <h1><b>Modules</b></h1><br />
        </header>                                                                
            <div class="table-responsive">          
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Spécialité</th>
                            <th scope="col">Notes</th>
                            <th scope="col">ECTS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for module in modules %}
                            <tr>
                                <td class="main">
                                    <h5><a href="{{ path('app.module.show', {'id': module.id} ) }}">{{ module.label }}</a></h5>
                                </td>
                                {% if module.speciality == 1 %}
                                    <td class="sub-info hide-640">Oui</td>
                                {% else %}
                                    <td class="sub-info hide-640">Non</td>
                                {% endif %}
                                <td class="sub-info">{{ grades[module.label].grade ?? '-' }}</td>
                                <td class="sub-info">{{ module.ects ?? '-' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
