{% extends 'base.html.twig' %}

{% block title %}Hello EducationalCoordinatorController!{% endblock %}

{% block body %}
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <div class="container">       
            <header class="animated bounceInDown">
                <h1><b>{{ 'educational_coordinator.student.title.index'|trans }}</b></h1><br />
            </header>                                                                
            <div class="table-responsive">          
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">DÃ©tails</th>
                            <th scope="col">{{ 'educational_coordinator.student.table.first_name'|trans }}</th>
                            <th scope="col">{{ 'educational_coordinator.student.table.last_name'|trans }}</th>
                            <th scope="col">{{ 'educational_coordinator.student.table.campus'|trans }}</th>
                            <th scope="col">{{ 'educational_coordinator.student.table.level'|trans }}</th>
                            <th scope="col">{{ 'educational_coordinator.student.table.company'|trans }}</th>
                            <th scope="col">{{ 'educational_coordinator.student.table.email'|trans }}</th>
                            <th scope="col">{{ 'educational_coordinator.student.table.sct'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for student in students %}
                        <tr>
                            <td><a href="{{ path('app.educational_coordinator.student.show', {'id': student.id}) }}"><i class="pe-7s-plus" style="font-size:30px;margin-top:4px"></i></a></td>
                            <td>{{ student.user.firstName ?? '-' }}</td>
                            <td>{{ student.user.lastName ?? '-' }}</td>
                            <td>{{ student.campus.label ?? '-' }}</td>
                            <td>{{ student.level.label ?? '-' }}</td>
                            <td>{{ student.companyTrainingContract.name ?? '-' }}</td>
                            <td><a href="mailto:{{ student.user.email }}" target="_blank">{{ student.user.email }}</a></td>
                            <td>{{ student.isSCT ? 'educational_coordinator.student.misc.yes'|trans : 'educational_coordinator.student.misc.no'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
