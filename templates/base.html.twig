{% set route = app.request.get('_route') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('konami') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
            <div class="container">
                <a class="navbar-brand" href="#">4PROJ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link {{ route == 'app.home' ? 'active' }}" href="{{ path('app.home') }}">{{ 'navbar.home'|trans }}</a>
                        </li>
                        {% if is_granted('ROLE_EDUCATIONAL_COORDINATOR') %}
                            <li class="nav-item">
                                <a class="nav-link {{ route == 'app.educational_coordinator.index' ? 'active' }}" href="{{ path('app.educational_coordinator.index') }}">{{ 'navbar.dashboard'|trans }}</a>
                            </li>
                        {% elseif is_granted('ROLE_ACADEMIC_DIRECTOR') %}
                            <li class="nav-item">
                                <a class="nav-link {{ route == 'app.academic_director.index' ? 'active' }}" href="{{ path('app.academic_director.index') }}">{{ 'navbar.dashboard'|trans }}</a>
                            </li>
                        {% else %} {# Student #}
                            <li class="nav-item">
                                <a class="nav-link {{ route == 'app.dashboard' ? 'active' }}" href="{{ path('app.dashboard.index') }}">{{ 'navbar.dashboard'|trans }}</a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            {% set entities = [
                                ['company', 'navbar.companies'|trans],
                                ['campus', 'navbar.campus'|trans],
                                ['diploma', 'navbar.diplomas'|trans],
                                ['gender', 'navbar.genders'|trans],
                                ['grade', 'navbar.grades'|trans],
                                ['instructor', 'navbar.instructors'|trans],
                                ['level', 'navbar.levels'|trans],
                                ['region', 'navbar.regions'|trans],
                                ['section', 'navbar.sections'|trans],
                                ['speciality', 'navbar.specialities'|trans],
                                ['staff', 'navbar.staffs'|trans],
                                ['student', 'navbar.students'|trans],
                                ['user', 'navbar.users'|trans],
                                ['absence', 'navbar.absences'|trans],
                                ['module', 'navbar.modules'|trans],
                                ['accountsPaymentType', 'navbar.accountsPaymentTypes'|trans],
                            ] %}
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Entities
                                </a>
                                
                                <ul class="dropdown-menu">
                                {% for entity in entities|sort((a, b) => a[1] <=> b[1]) %}
                                    <li>
                                        <a class="dropdown-item {{ route starts with 'app.admin.' ~ entity[0] ? 'active' }}" href="{{ path('app.admin.' ~ entity[0] ~ '.index') }}">{{ entity[1] }}</a>
                                    </li>
                                {% endfor %}
                                </ul> 
                            </li>
                        {% endif %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Dev
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item {{ route starts with 'app.admin/data_source' ? 'active' }}" href="{{ path('app.admin.data_source.index') }}">Data-sources</a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                {{ app.user.userIdentifier }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="#">{{ 'navbar.my_profile'|trans }}</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app.logout') }}">{{ 'navbar.logout'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link {{ route == 'app.login' ? 'active' }}" aria-current="page" href="{{ path('app.login') }}">{{ 'navbar.login'|trans }}</a>
                        </li>
                    {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
