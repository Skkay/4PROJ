{% set route = app.request.get('_route') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css" integrity="sha512-QKC1UZ/ZHNgFzVKSAhV5v5j73eeL9EEN289eKAEFaAjgAiobVAnVv/AGuPbXsKl1dNoel3kNr6PYnSiTzVVBCw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
            .carousel-indicators {position: absolute;bottom: 0%;margin: auto;height: 20px;left: 46%;right: auto;width: auto;}
            .carousel-indicators li {display: block;margin-bottom: 8px;border: 1px solid #fff;}
            .carousel-indicators li.active {margin-bottom: 8px;background: #fff;}
            .mb-space-grey{background-image:url('{{asset('build/images/Apple-Macbook-Space-Grey.png')}}');}
            .bg-faded{background-color:rgba(255,255,255,.85)}
            .lead {
                font-size: 1.0625rem;
                font-weight: 300;
            }
        </style>
        <script src="https://code.iconify.design/1/1.0.3/iconify.min.js"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('konami') }}
            {{ encore_entry_script_tags('agency') }}
        {% endblock %}
    </head>
    <body>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="wrapper">
            <div class="sidebar">
                <div class="sidebar-wrapper" style="background-color:#232020">
                    <div class="logo" style="font-family:sans-serif;font-size:35px;color:#007bff;text-align:center;">
                        ENT SUPINFO
                    </div>

                    
                    <ul class="nav" style="display:block">
                        {% if is_granted('ROLE_EDUCATIONAL_COORDINATOR') %}
                            <li class="active">
                                <a class="{{ route == 'app.educational_coordinator.index' ? 'active' }}" href="{{ path('app.educational_coordinator.index') }}"><i class="pe-7s-graph"></i><p>{{ 'navbar.dashboard'|trans }}</p></a>
                            </li>
                        {% elseif is_granted('ROLE_ACADEMIC_DIRECTOR') %}
                            <li class="active">
                                <a class="{{ route == 'app.academic_director.index' ? 'active' }}" href="{{ path('app.academic_director.index') }}"><i class="pe-7s-graph"></i><p>{{ 'navbar.dashboard'|trans }}</p></a>
                            </li>
                        {% elseif is_granted('ROLE_ACCOUNTS') %}
                            <li class="active">
                                <a class=" {{ route == 'app.accounts.index' ? 'active' }}" href="{{ path('app.accounts.index') }}"><i class="pe-7s-graph"></i><p>{{ 'navbar.dashboard'|trans }}</p></a>
                            </li>
                        {% elseif is_granted('ROLE_ADMIN') %}
                            <li class="active">
                                <a class=" {{ route == 'app.admin.index' ? 'active' }}" href="{{ path('app.admin.index') }}"><i class="pe-7s-graph"></i><p>{{ 'navbar.dashboard'|trans }}</p></a>
                            </li>
                            <li>
                                <a class="{{ route starts with 'app.admin/data_schema' ? 'active' }}" href="{{ path('app.admin.etl.data_schema.index') }}">
                                    <i class="pe-7s-server"></i>
                                    <p>Data-sources</p>
                                </a>
                            </li>  
                        {% else %} {# Student #}
                            <li class="active">
                                <a class="{{ route == 'app.dashboard' ? 'active' }}" href="{{ path('app.dashboard.index') }}"><i class="pe-7s-graph"></i><p>{{ 'navbar.dashboard'|trans }}</p></a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('app.profile.index') }}">
                                <i class="pe-7s-users"></i>
                                <p>{{ 'navbar.my_profile'|trans }}</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="main-panel">
                <nav class="navbar navbar-default navbar-fixed" style="poistion:relative">
                    <div class="container-fluid" style="display:inline-block">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand {{ route == 'app.home' ? 'active' }}" href="{{ path('app.home') }}">{{ 'navbar.home'|trans }}</a>
                        </div>
                        <div class="collapse navbar-collapse">
                            

                            <ul class="nav navbar-nav navbar-right d-inline-block">
                            {% set currentPath = path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params')) %}
                            {% if app.request.uri == 'https://127.0.0.1:8000/modules' or 'https://127.0.0.1:8000/report_card/' in app.request.uri %}
                                <li style="margin-top:8px;display:inline-block">
                                    <i class="pe-7s-search" aria-hidden="true"></i>
                                    <input class="form-control form-control-sm ml-3 w-75 d-inline-block" type="text" id="Empsearch" placeholder="Recherche" aria-label="Recherche">
                                </li>
                            {% endif %}
                                

                                <li>
                                    <a class="dropdown-item" href="{{ path('app.logout') }}"><p>{{ 'navbar.logout'|trans }}</p></a>
                                </li>
                                <li class="separator hidden-lg"></li>
                            </ul>
                        </div>
                    </div>
                </nav>
        {% else %}
        {% if app.request.uri == 'https://127.0.0.1:8000/about' %}
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        {% else %}
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #212529;margin-bottom:20px" id="mainNav">
        {% endif %}
            <div class="container">
                <a class="navbar-brand" href="#">ENT SUPINFO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav text-uppercase ml-auto">
                    
                        <li class="nav-item">
                            <button type="button" class="btn" style="border:none;font-size:15px">
                                <a class="nav-link js-scroll-trigger{{ route == 'app.home' ? 'active' }}" href="{{ path('app.home') }}">{{ 'navbar.home'|trans }}</a>
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="btn btn-primary" style="background-color:#3472F7;font-size:15px">
                                <a class="nav-link js-scroll-trigger {{ route == 'app.login' ? 'active' }}" aria-current="page" href="{{ path('app.login') }}">{{ 'navbar.login'|trans }}</a>
                            </button>
                        </li>
                
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" style="line-height:49px">
                                {{ 'navbar.language'|trans }}
                            </a>
                           
                            <ul class="dropdown-menu dropdown-menu-end">
                                {% for locale in locales %}
                                    <li>
                                        <a class="dropdown-item {{ locale == app.request.locale ? 'active' }}" href="{{ path('app.locale.change', { 'locale': locale }) }}">{{ locale }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>

        {% endif %}
        {% block body %}{% endblock %}

        <div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 11">
            {% block toasts %}{% endblock %}
        </div>
    </body>
</html>
