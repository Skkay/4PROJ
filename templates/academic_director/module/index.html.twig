{% extends 'base.html.twig' %}

{% block title %}{{ 'academic_director.module.title.index'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'academic_director.module.title.index'|trans }}</h1>

<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th scope="col">{{ 'academic_director.module.table.id'|trans }}</th>
            <th scope="col">{{ 'academic_director.module.table.label'|trans }}</th>
            <th scope="col">{{ 'academic_director.module.table.speciality'|trans }}</th>
            <th scope="col">{{ 'academic_director.module.table.ects'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for module in modules %}
        <tr>
            <td><a href="{{ path('app.academic_director.module.show', {'id': module.id} ) }}">{{ module.id }}</a></td>
            <td>{{ module.label }}</td>
            <td>{{ module.speciality ?? '-' }}</td>
            <td>{{ module.ects ?? '-' }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
